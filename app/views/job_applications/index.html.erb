<%- model_class = JobApplication -%>
<%- applicant_class = Applicant -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% unless @no_view_screen_available_message %>
  <div class="row">
    <div class="col-lg-12">
      <center><%= @upgrade_account_message %></center>
    </div>
  </div>

  <div class="list-group">
    <% @job_applications.each do |job_application| %>

      <% url = @view_screen.screen_tabs.active.count == 1 ? "javascript:;" : job_application_path(job_application) %>

      <%= link_to url, class: "list-group-item list-group-item-action flex-column align-items-start" do %>
        <% answers = get_answers(@view_screen, job_application) %>

        <% answers.each do |index, tab_field| %>
          <div class="d-flex w-100 justify-content-between">
            <h5 class="mb-1"><%= tab_field["question"] %></h5>
            <small><%= tab_field["answer"] %></small>
          </div>
          <div class="<%= 'border' if index<answers.size-1 %>"></div>
        <% end %>
      <% end %>

    <% end %>
  </div>
<% else %>
  <div class="row">
    <div class="col-lg-12">
      <center><%= @no_view_screen_available_message %></center>
    </div>
  </div>
<% end %>
