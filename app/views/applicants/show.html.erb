<%- model_class = Applicant -%>

<div class="page-header">
  <h1><%= @applicant.first_name %></h1>
</div>

<% screen_tabs = @view_screen.screen_tabs.offset(1) %>
<div class="tab-content">
  <% screen_tabs.each_with_index do |screen_tab, tab_index| %>
    <div role="tabpanel" class="tab-pane <%='active' if tab_index==0 %>" id="screen_tab-<%=tab_index%>">
      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <% applicant_details = get_details(@view_screen, @applicant, screen_tab) %>
        <%= render 'previous_next_button', tab_index: tab_index, screen_tabs_size: screen_tabs.size-1 %>
        <hr>

        <% applicant_details.each do |index, answer|%>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="headingTwo">
              <h4 class="panel-title collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#<%= answer['question_id']%>-<%= index %>" aria-expanded="<%= index == 0 %>" aria-controls="<%= answer['question_id']%>-<%= index %>">
                <%= answer["question"] %>
              </h4>
            </div>
            <div id="<%= answer['question_id']%>-<%= index %>" class="panel-collapse collapse <%= 'in' if index == 0 %>" role="tabpanel" aria-labelledby="headingTwo">
              <div class="panel-body">
                <%= answer["answer"] %>
              </div>
            </div>
          </div>
        <% end %>

        <hr>
        <%= render 'previous_next_button', tab_index: tab_index, screen_tabs_size: screen_tabs.size-1 %>
      </div>
    </div>
  <% end %>
</div>
