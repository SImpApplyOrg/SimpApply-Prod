<%- model_class = Applicant -%>

<%= content_for :top_div_class, 'dashApplicant dashboard-wrapper' %>

<div class="dashApplicant-header light-red-bg clearfix">
  <span class="light-bg-org pull-left">
    <%= link_to '<i class="fa fa-long-arrow-left light-red-clr white-bdr" aria-hidden="true"></i>'.html_safe, root_path %>
  </span>
  <h2 class="text-center">Applicants</h2>
</div>


<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 faq-bg">
  <%= render 'shared/custom_flash' %>
  <%= render 'applicant_list' %>
</div>

<script type="text/javascript">

  $(".light-red-bdr").click(function(){

      $(".faq-group").addClass("hide");
      var $this = $(this)
      if( $this.hasClass("data_show")){
        $(".light-red-bdr").removeClass("data_show");
      }
      else{
        $(".light-red-bdr").removeClass("data_show");
        $this.addClass("data_show");
        $(this).closest(".dashApplicant-blog").prev(".faq-group").removeClass("hide");
      }
  });

</script>
