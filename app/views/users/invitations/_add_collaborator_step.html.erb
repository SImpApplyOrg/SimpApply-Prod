<div class="tab-pane active" id="add-collaborator">
  <div class="sign-up-steps step2 step3 step4 step6">
    <div class="container inner-main"> 
      <h2 class="text-center step-title">
        <p id="header1"><%= t "devise.invitations.collaborators.header1" %></p>
        <p id="header2" class="hide"><%= t "devise.invitations.collaborators.header2" %></p>
      </h2>
      <div class="light_shadow_bg step_data text-center">
        <div class="flex-container"> 
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="clearfix"></div>
            <div class="step_jobName_form stepThree_form StepFore_form form-horizontal">
              <div class="form-group col-sm-12"> 
                <%= f.label :mobile_no, 'Add Collaborators', :class => 'control-label' %>
                <%= f.text_field :mobile_no, autofocus: true, :class => 'form-control', placeholder: 'Phone numbers' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12"> 
                <%= f.label :user_role, 'Role', :class => 'control-label' %>
                <%= f.select :user_role, UserInvitation.roles.map{ |key, value| [value, key] }, {}, :class => 'form-control' %>
                <span class="line-bdr"></span>
              </div>

              <div class="skip-add-btn">
                <ul class="step-bottom-btn-wrap wizard">
                  <li class="col-lg-6 col-md-6 col-sm-6 col-xs-6">
                    <%= link_to 'Skip', root_path, method: :get, class: 'btn btn-start btn-skip btn-block text-center' %>
                  </li>
                  <li class="col-lg-6 col-md-6 col-sm-6 col-xs-6 next">
                    <a href="javascript:;" class="btn btn-start btn-custom btn-block text-center">Add</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
