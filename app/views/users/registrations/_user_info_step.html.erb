<div class="tab-pane <%= has_token? ? 'active' : '' %>" id="user-info">
  <div class="sign-up-steps step2 step3">
    <div class="container inner-main"> 
      <h2 class="text-center step-title"><%= t "devise.registrations.let_continue" %></h2>
      <div class="light_shadow_bg step_data text-center">     
        <div class="flex-container">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="step_jobName_form stepThree_form">
              <div class="form-group col-sm-12">
                <%= f.label :first_name, :class => 'control-label' %>
                <%= f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: 'Your first name' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :last_name, class: 'control-label' %>
                <%= f.text_field :last_name, class: 'form-control', placeholder: 'Your last name' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :email, "Email Address", class: 'control-label' %>
                <%= f.email_field :email, class: 'form-control', readonly: @merchant && @merchant.email.present?, placeholder: 'Your email address' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :mobile_no, 'Enter Phone', class: 'control-label' %>
                <div class="clearfix"></div>
                <%= f.text_field :mobile_no, class: 'form-control', placeholder: '+147236587', readonly: has_token?, placeholder: 'Phone number' %>
                <span class="line-bdr"></span>
              </div>

            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12">
              <ul class="step-bottom-btn-wrap wizard">
                <li class="next"><a href="javascript:;" class="btn btn-start btn-custom btn-block">Proceed</a></li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>