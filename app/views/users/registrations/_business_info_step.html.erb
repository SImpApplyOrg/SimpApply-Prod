<div class="tab-pane" id="business-info">
  <div class="sign-up-steps step2 step3 step5">
    <div class="container inner-main"> 
      <h2 class="text-center step-title"><%= t "devise.registrations.finalize_account" %></h2>
      <div class="light_shadow_bg step_data text-center">     
        <div class="flex-container">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="step_jobName_form stepThree_form">
              <div class="form-group col-sm-12">
                <%= f.label :organization_name, "Business name", :class => 'control-label' %>
                <%= f.text_field :organization_name, :class => 'form-control', placeholder: 'Company name' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :address, "Business address", :class => 'control-label' %>
                <%= f.text_field :address, :class => 'form-control', autocomplete: 'off', placeholder: 'Company address' %>
                <%= f.hidden_field :lat, :class => 'form-control' %>
                <%= f.hidden_field :lng, :class => 'form-control' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :locale, "Business address", :class => 'control-label' %>
                <%= f.select :locale, I18n.available_locales, {}, :class => 'form-control' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :password, :class => 'control-label' %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: 'off', :class => 'form-control', placeholder: 'Your password' %>
                <span class="line-bdr"></span>
              </div>
              <div class="form-group col-sm-12">
                <%= f.label :password_confirmation, :class => 'control-label' %>
                <%= f.password_field :password_confirmation, autocomplete: 'off', :class => 'form-control', placeholder: 'Confirm your password' %>
                <span class="line-bdr"></span>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-sm-12">
              <ul class="step-bottom-btn-wrap wizard">
                <li class="finish">
                  <%= f.submit 'Proceed', class: 'btn btn-start btn-custom btn-block' %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>