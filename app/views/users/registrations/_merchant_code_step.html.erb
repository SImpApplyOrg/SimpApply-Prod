<% unless has_token? %>
  <div class="tab-pane active" id="merchant-code">
    <div class="sign-up-steps step2">
      <div class="container inner-main inner-step2"> 
        <h2 class="text-center step-title"><%= t "devise.registrations.your_sign" %></h2>
        <div class="light_shadow_bg step_data text-center">     
          <div class="flex-container">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
              <%= image_tag "apply-img.png", class: "img-responsive text-right pull-right apply_img" %>
              <div class="clearfix"></div> 
              <h3>Now Hiring</h3>
              
              <div class="step_jobName_form">
                <div class="form-group col-sm-12">
                   <%= f.text_field :job_name, autofocus: true, :class => 'form-control', placeholder: "Enter job name" %>
                  <span class="doted-bdr"></span>
                </div>

                <div class="form-group text-sms col-sm-12">
                  <%= image_tag "sms-img.png", class: "img-responsive pull-left" %>
                  <%= f.label :merchant_code, 'TEXT:', class: 'text-right pull-left' %>
                  <div class="pull-left merchant-code-input">
                    <%= f.text_field :merchant_code, :class => 'form-control', placeholder: "Enter SMS Text" %>
                  </div>
                  <div class="clearfix"></div>
                  <p class="text-left number-left">To <i class="fa fa-long-arrow-right" aria-hidden="true"></i> 415-767-5993</p>
                </div>
              </div>   
            </div>
          </div>
        </div>
      </div>
      <div class="clearfix"></div>
      
      <ul class="step-bottom-btn-wrap wizard">
        <li><a href="javascript:;" class="orng-btn col-sm-6 col-xs-6 col-md-6 col-lg-6">Print</a></li>
        <li class="next"><a href="javascript:;" class="light-gray-btn col-sm-6 col-xs-6 col-md-6 col-lg-6">Continue</a></li>
      </ul>
    </div>
  </div>
<% end %>