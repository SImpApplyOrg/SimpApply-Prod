<p><%= t("devise.mailer.invitation_instructions.hello", email: @user.email) %></p>

<p><%= t("devise.mailer.invitation_instructions.someone_invited_you", sender_name: @sender.full_name, organization_name: @sender.organization_name) %></p>

<% if @user.sign_in_count == 0 %>
  <p><%= link_to t("devise.mailer.invitation_instructions.accept"), accept_invitation_url(@user, :invitation_token => @token) %></p>

  <% if @user.invitation_due_at %>
    <p><%= t("devise.mailer.invitation_instructions.accept_until", due_date: l(@user.invitation_due_at, format: :'devise.mailer.invitation_instructions.accept_until_format')) %></p>
  <% end %>

  <p><%= t("devise.mailer.invitation_instructions.ignore").html_safe %></p>
<% else %>
  <p><%= t("devise.mailer.invitation_instructions.already_have_account") %></p>
<% end %>
