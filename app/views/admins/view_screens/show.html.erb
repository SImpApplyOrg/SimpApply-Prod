<%- model_class = ViewScreen -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <!-- <dt><strong><%#= model_class.human_attribute_name(:screen_for) %>:</strong></dt>
  <dd><%#= @view_screen.screen_for.capitalize %></dd> -->
  <dt><strong><%= model_class.human_attribute_name(:screen_tabs) %>:</strong></dt>
 	<dd>
  	<ol>
			<% @view_screen.screen_tabs.each do |screen_name| %>
				<li>
				  <%= screen_name.name.capitalize %>
				    <ul>
				    	<% for tab_field in screen_name.tab_fields %>
				    	  <li><%= tab_field.job_application_question.question	%></li>
				    	<% end %>
				    </ul>
				</li>
			<% end %>
		</ol>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admins_view_screens_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_admins_view_screen_path(@view_screen, lang: 'en'), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              admins_view_screen_path(@view_screen),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
