<%- model_class = ViewScreen -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <!-- <th><%#= model_class.human_attribute_name(:screen_for) %></th> -->
      <th><%= model_class.human_attribute_name(:screentabs) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @view_screens.each do |view_screen| %>
      <tr>
        <td><%= link_to view_screen.id, admins_view_screen_path(view_screen) %></td>
        <!-- <td><%#= view_screen.screen_for %></td> -->
        <td><%= view_screen.screen_tabs.map(&:name).join(", ") %></td>
        <td><%=l view_screen.created_at %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      admins_view_screen_path(view_screen), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admins_view_screen_path(view_screen), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admins_view_screen_path(view_screen),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admins_view_screen_path,
            :class => 'btn btn-primary' %>
