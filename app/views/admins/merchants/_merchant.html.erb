<% user = merchant.user %>
<tr id="<%= merchant.id %>">
  <td><%= merchant.uuid %></td>
  <td><%= user.blank? ? merchant.email : user.email %></td>
  <td><%= merchant.mobile_no %></td>
  <td><%= user.blank? ? t('.not_registered', :default => t("helpers.texts.not_registered")): t('.registered', :default => t("helpers.texts.registered")) %></td>
  <td><%= user.blank? ? '' : (l user.created_at) %></td>
  <td>
    <% if user %>
      <% if user.is_active? %>
        <%= link_to t('.suspend', :default => t("helpers.links.suspend")),
                  admins_merchant_suspend_path(merchant),
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger', remote: true %>
      <% else %>
        <%= link_to t('.active', :default => t("helpers.links.active")),
                  admins_merchant_active_path(merchant), :class => 'btn btn-default btn-xs', remote: true %>
      <% end %>
    <% end %>
  </td>
</tr>
