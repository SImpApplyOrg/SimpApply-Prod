<% if @job_application_question.errors.any? %>
  $('td#<%= @field_type %>-<%= @job_application_question.id %>').html("<%= escape_javascript(render 'form_'+@field_type, job_application_question: @job_application_question) %>");
<% else %>
  $('td#<%= @field_type %>-<%= @job_application_question.id %>').html("<%= escape_javascript(render @field_type, job_application_question: @job_application_question) %>");

  <% if @job_application_question.send(@field_type).blank? %>
    $('td#<%= @field_type %>-<%= @job_application_question.id %>').children('.hover-edit').siblings('.question-form').toggle();
  <% end %>
<% end %>
