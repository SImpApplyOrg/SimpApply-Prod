<%- model_class = MessageTag -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:tag_name) %>:</strong></dt>
  <dd><%= @message_tag.tag_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag_value) %>:</strong></dt>
  <dd><%= @message_tag.tag_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:job_application_question_id) %>:</strong></dt>
  <dd><%= @message_tag.job_application_question.try(:question) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_editable) %>:</strong></dt>
  <dd><%= @message_tag.is_editable %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              admins_message_tags_path, :class => 'btn btn-default'  %>
<% if @message_tag.is_editable? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_admins_message_tag_path(@message_tag, lang: 'en'), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                admins_message_tag_path(@message_tag),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
