<%- model_class = MessageTag -%>

<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <colgroup>
    <col width="5%">
    <col width="10%">
    <col width="15%">
    <col width="30%%">
    <col width="5%">
    <col width="10%">
    <col width="15%">
  </colgroup>
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:tag_name) %></th>
      <th><%= model_class.human_attribute_name(:tag_value) %></th>
      <th><%= model_class.human_attribute_name(:job_application_question_id) %></th>
      <th><%= model_class.human_attribute_name(:is_editable) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <%= render @message_tags %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_admins_message_tag_path,
            :class => 'btn btn-primary' %>
