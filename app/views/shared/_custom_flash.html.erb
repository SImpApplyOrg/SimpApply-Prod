<% unless flash.blank? %>
  <div class="notification-msg-box alert">
    <div class="alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><div aria-hidden="true">&times;</div></button>

      <% flash.each do |type, message| %>
        <div class="row">
          <i class="fa fa-question-circle-o pull-left" aria-hidden="true"></i>
          <div class="pull-left"><%= message %></div>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
<div class="divider-bdr"></div>