<%- model_class = User %>

<div class="well">
  <center>
    <h1>Welcome to SimpApply</h1>
  </center>
</div>

<% if current_user %>
  <div class="page-header">
    <h1><%=t '.title', :default => "Invite " + model_class.model_name.human.pluralize.titleize %></h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th><%= model_class.human_attribute_name(:role) %></th>
        <th><%= model_class.human_attribute_name(:invite_sent_at) %></th>
        <th><%= model_class.human_attribute_name(:invite_status) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% if @invitations %>
        <% @invitations.each do |invite_user| %>
          <tr>
            <td><%= invite_user.sender.id %></td>
            <td><%= invite_user.sender.email %></td>
            <td><%= invite_user.sender.role %></td>
            <td><%= invite_user.created_at %></td>
            <td><%= invite_user.status %></td>

            <td>
              <% if invite_user.status == 'pending' %>
                <%= link_to t('.accept', :default => t("helpers.links.accept")),
                                update_token_user_invites_path(invite_user, status: 'accept'),
                                :class => 'btn btn-xs btn-danger' %>
                <%= link_to t('.reject', :default => t("helpers.links.reject")),
                                update_token_user_invites_path(invite_user, status: 'reject'),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-xs btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<% end %>
