<%- model_class = User %>

<% if current_user %>
  <div class="page-header">
    <h1><%=t '.title', :default => "Invitations" %></h1>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:Invited_by) %></th>
        <th><%= model_class.human_attribute_name(:invited_as) %></th>
        <th><%= model_class.human_attribute_name(:invite_sent_at) %></th>
        <th><%=t '.actions', :default => t("helpers.actions") %></th>
      </tr>
    </thead>
    <tbody>
      <% if !@invitations.blank? %>
        <% @invitations.each do |invite_user| %>
          <tr>
            <td><%= user_name(invite_user.sender) %></td>
            <td><%= invite_user.role %></td>
            <td><%= invite_user.created_at %></td>

            <td>
              <% if invite_user.status == 'pending' %>
                <%= link_to t('.accept', :default => t("helpers.links.accept")),
                                update_token_user_invite_path(invite_user, status: 'accept'),
                                :class => 'btn btn-xs btn-danger' %>
                <%= link_to t('.reject', :default => t("helpers.links.reject")),
                                update_token_user_invite_path(invite_user, status: 'reject'),
                                :method => :delete,
                                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                                :class => 'btn btn-xs btn-danger' %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="4">
            No any pending invitations available
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="sign-up-steps">
    <div class="container inner-main"> 
      <div class="light_shadow_bg step_data text-center">     
        <div class="flex-container">
          <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12"> 
            <h3>simp<span>apply</span></h3>
            <h4>Nice to see you!</h4>          
            <p>Do you need a new employer? Create<br /> a new job here!</p>
            <div class="col-sm-12">
              <%= link_to 'Give me My Sign', new_user_registration_path, class: 'btn btn-start btn-custom btn-block', method: :get %>
            </div>
            <div class="clearfix"></div>
            <span class="already_text">
              Already registered?
              <%= link_to 'Sign in', new_user_session_path, method: :get %>
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
